@model IEnumerable<g3.Models.Movie>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: radial-gradient(circle at center, #000000 0%, #1a1a1a 100%);
        font-family: 'Cinzel', serif;
        color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .welcome-box {
        padding: 50px;
        border-radius: 15px;
        background: linear-gradient(145deg, #1c1c1c, #0a0a0a);
        color: #f5f5f5;
        text-align: center;
        margin: 50px auto;
        max-width: 800px;
        border: 2px solid #ff0000;
        box-shadow: 0 0 30px rgba(255, 0, 0, 0.4);
    }

        .welcome-box h1 {
            font-size: 3rem;
            color: #ff0000;
            margin-bottom: 20px;
            text-shadow: 2px 2px 8px #000;
        }

        .welcome-box a {
            color: #ffd700;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .welcome-box a:hover {
                color: #ffffff;
                text-decoration: underline;
            }

    /* Movie Grid */
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin: 40px auto;
        padding: 20px;
        max-width: 1200px;
    }

    .movie-card {
        background: rgba(20, 20, 20, 0.9);
        border: 2px solid #ff0000;
        border-radius: 12px;
        padding: 20px;
        color: #f5f5f5;
        box-shadow: 0 6px 12px rgba(255, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .movie-card:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 24px rgba(255, 0, 0, 0.4);
        }

        .movie-card h3 {
            color: #ff0000;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .movie-card p {
            margin: 6px 0;
            font-size: 1rem;
        }

            .movie-card p strong {
                color: #ffd700;
            }
</style>

<div class="welcome-box">
    <h1>🎥 Welcome to MovieVerse</h1>
    <p>
        Discover the best movies. Check now at
        <a href="https://nowshowingph.com/" target="_blank">NowShowingPH</a>
    </p>
</div>

<div class="movie-grid">
    @foreach (var movie in Model)
    {
        <div class="movie-card">
            <h3>@movie.Title</h3>
            <p><strong>Genre:</strong> @movie.Genre</p>
            <p><strong>Release Year:</strong> @movie.ReleaseDate.Year</p>
            <p><strong>Rating:</strong> ⭐ @movie.Rating</p>
        </div>
    }
</div>
